<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Users</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <header class="header">
      <a href="/" class="header-title">User CRUD App</a>
    </header>

    <main class="container">
      <div class="card">
        <h2>All Registered Users</h2>
        <div class="form-actions">
          <a href="/user/new" class="btn btn-success">Add New User</a>
          <a href="/" class="btn btn-secondary">Back to Home</a>
        </div>

        <div class="table-wrapper">
          <table class="user-table">
            <thead>
              <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% for(user of users) { %>
              <tr>
                <td class="user-id"><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td class="actions-cell">
                  <a href="/user/<%=user.id%>/view" class="btn btn-secondary"
                    >View</a
                  >
                  <a href="/user/<%=user.id%>/edit" class="btn btn-primary"
                    >Edit</a
                  >
                  <a href="/user/<%=user.id%>/delete" class="btn btn-danger"
                    >Delete</a
                  >
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </body>
</html>
